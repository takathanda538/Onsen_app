<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>温泉名</th>
      <th>誰と</th>
      <th>投稿日</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td>
        <% post.post_images.each do |image| %><br>
          <%= image_tag image.variant(resize: '50x50') %>
        <% end %>
        </td>
        <td>
          <%= link_to post_path(post) do%>
           <%= post.name %>
          <% end %>
        </td>
        <td><%= post.title %></td>
        <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
        <td>コメント件数：<%= post.post_comments.count %></td>
        <td>いいね数：<%= post.likes.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
