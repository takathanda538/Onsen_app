<div class="row">

  <div class="col-3">
    <h5>投稿一覧画面</h5>
  </div>

  <div class="col-9">
    <table class='table'>
      <thead>
        <tr>
          <th>投稿者</th>
          <th>温泉</th>
          <th>タイトル</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td>
              <%= link_to customer_path(post.customer) do%>
                <%= image_tag post.customer.get_profile_image(50,50) , class: "rounded-circle", size: "50x50" %>
                <%= post.customer.name %>
              <% end %>
            </td>
            <td>
              <%= link_to post_path(post) do%>
                <%= post.name %>
              <% end %>
            </td>
            <td><%= post.title %></td>
            <td><%= post.post_comments.count %>コメント</td>
            <td>
              <%= render partial: "public/likes/like", locals: { post: post} %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
