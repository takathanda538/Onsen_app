<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>ユーザー名</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% customers.each do |customer| %>
      <tr>
        <td>
          <%= link_to customer_path(customer) do%>
            <% if customer.profile_image.present? %>
              <%= image_tag customer.profile_image.variant(resize: '50x50'),class: "review-img"%>
            <% end %>
          <% end %>
        </td>
        <td>
          <%= link_to customer_path(customer) do%>
           <%=customer.name %>
          <% end %>
        </td>
        <% if customer.introduce.present? %>
        <td><%= customer.introduce %></td>
        <% end %>
        <td>フォロー数：<%= customer.following_customer.count %></td>
        <td>フォロアー数：<%= customer.follower_customer.count %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>


