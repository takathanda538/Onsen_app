<div class="row">

  <div class="col-3">
    <%= render 'info', customer: @customer %>
     <% if customer_signed_in? && @customer == current_customer %>
       <%= link_to "プロフィール編集", edit_customer_path(@customer), class: "btn-sm btn-success" %>
     <% end %>
  </div>
  <div class="col-9">
    <%= render 'public/posts/index', posts: @posts %>
  </div>
</div>
