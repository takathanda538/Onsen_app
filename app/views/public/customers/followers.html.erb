<div class="container">
  <div class="row justify-content-center">
    <div class="col-7">
      <table class="table table-white">
        <thead>
          <tr>
            <p class ="text-center h2">フォロアー一覧</p>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>  
              <td><%= image_tag customer.get_profile_image(40,40) , class: "rounded-circle", size: "40x40" %></td>
              <td>
                <%= link_to customer_path(customer) do %>
                  <%= customer.name %>
                <% end %>
              </td>
              <td>
                <% if customer_signed_in? && current_customer != customer %>
                  <% if current_customer.following?(customer) %>
                    <%= link_to 'フォロー外す', customer_relationships_path(customer.id), method: :delete, remote: true, class: "btn-sm btn-danger" %>
                  <% else %>
                     <%= link_to 'フォローする', customer_relationships_path(customer.id), method: :POST, remote: true, class:"btn-sm btn-success" %>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>  