<div class="row">

  <div class="col-md-4">
    <div class="chat-room">
    <h1>メッセージ</h1>
    <% @entries.each do |r| %>
      <div class="user-name">
      <%= link_to customer_path(r.customer) do %>
        <%= r.customer.name %>さん
      <% end %>
      </div>
    <% end %>
    </div>
  </div>

  <div class="col-md-8">
    <div class="chats">
      
      <div class="posts">
      <%= form_with model: @message, local: true do |f| %>
        <%= f.text_area:body, placeholder: "メッセージを入力", style: "width:70%" %>
        <%= f.hidden_field :room_id, value: @room.id %>
        <%= button_tag type: 'submit', class: 'btn btn-default'  do %>
          <i class="far fa-paper-plane fa-lg"></i>
        <% end %>
      <% end %>
      </div>

      <div class="chat">
      <% if @messages.present? %>
        <% @messages.each do |m| %>
        <div class="chat-box">
          <div class="chat-text">
          <%= image_tag m.customer.get_profile_image(50,50) , class: "rounded-circle", size: "50x50" %>
          <%= m.body %>
          <%= m.created_at.strftime("%m-%d %H:%M") %>
          </div>
        </div>
        <% end %>
      <%else%>
      <p>メッセージはまだありません</p>
      <% end %>
      </div>


    </div>
  </div>
</div>