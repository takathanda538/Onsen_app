<div class="container">
  <div class="row justify-content-center ">
  
    <div class="col-md-8">
      <div class="chats">
        <p id="chats-customer"><%= @another_customer.name %>さんとのトークルーム</p>
        <div class="posts">
        <%= form_with model: @message, local: true do |f| %>
          <%= f.text_area:body, placeholder: "メッセージを入力", style: "width:70%" %>
          <%= f.hidden_field :room_id, value: @room.id %>
          <%= button_tag type: 'submit', class: 'btn btn-default'  do %>
            <i class="far fa-paper-plane fa-lg"></i>
          <% end %>
        <% end %>
        </div>
  
        <div class="chat">
        <% if @messages.present? %>
          <% @messages.each do |message| %>
          <div class="chat-box">
            <div class="chat-text">
            <%= image_tag message.customer.get_profile_image(50,50) , class: "rounded-circle", size: "50x50" %>
            <%= message.body %>
            <font size="1px">
              <%= message.created_at.strftime("%m-%d %H:%M") %>
            </font>
            </div>
          </div>
          <% end %>
          <%= paginate @messages, theme: 'bootstrap-5' %>　
        <%else%>
        <p>メッセージはまだありません</p>
        <% end %>
        </div>
        
      </div>
    </div>
    
  </div>
</div>  