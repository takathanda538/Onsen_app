<div class="container">
  <div class="row justfy-content-center">
    <div class="col-12 text-center">
      <h3>通知</h3>
      <small><%= link_to "通知を消去", notification_path(@notifications), method: :delete%></small>
      
      
      <% if @notifications.present? %>
          <div class="users-index">
              <%= render @notifications %>
          </div>
      <% else %>
          <p>通知はありません</p>
      <% end %>
    </div>
  </div>
</div>