  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h1>コメント編集画面</h1>
    <%= form_with model: [@post, @post_comment], remote:false do |f| %>
      <div class="form-group">
        <%= f.label :comment %>
        <%= f.text_field :comment, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit class: 'btn btn-success' %>
      </div>
        <% end %>
    </div>
  </div>