<div class="container">
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>投稿編集画面</h1>
      <%= form_with model:@post,url: admin_post_path(@post), method: :PATCH, remote:false do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
        <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
        <%= f.label :県名 %>
        <%= f.select :ride_area, Post.ride_areas.keys, {} %>
        </div>
        <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control' %>
        </div>
        <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :post_images, multiple: true, class: 'form-control' %>
        </div>
        <div class="form-group">
        <%= f.submit class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>