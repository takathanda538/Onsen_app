<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>温泉名</th>
      <th>title</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td>
          <%= link_to post_path(post) do%>
          <%= post.name %>
          <% end %>
        </td>
        <td><%= post.title %></td>
        <td>コメント：<%= post.post_comments.count %>件</td>
        <td>いいね：<%= post.likes.count %></td>


          <% if post.customer == current_customer %>
        <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-sm btn-success" %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>